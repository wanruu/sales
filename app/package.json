{
    "name": "invoice",
    "version": "0.0.1",
    "private": true,
    "main": "public/electron.js",
    "description": "清单管理~",
    "author": {
        "name": "wanruuu",
        "email": "wanruuu@gmail.com"
    },
    "homepage": "./",
    "dependencies": {
        "@dnd-kit/core": "^6.1.0",
        "@dnd-kit/modifiers": "^7.0.0",
        "@dnd-kit/sortable": "^8.0.0",
        "@reduxjs/toolkit": "^2.1.0",
        "antd": "^5.4.7",
        "axios": "^1.4.0",
        "cors": "^2.8.5",
        "decimal.js": "^10.4.3",
        "echarts-for-react": "^3.0.2",
        "electron-squirrel-startup": "^1.0.0",
        "lodash": "^4.17.21",
        "mathjs": "^11.8.0",
        "pinyin-pro": "^3.19.4",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-redux": "^9.1.0",
        "react-router-dom": "^6.22.0",
        "react-scripts": "^5.0.1",
        "react-to-print": "^2.14.12",
        "react-uuid": "^2.0.0",
        "redux": "^5.0.1",
        "rsyncwrapper": "^3.0.1",
        "sqlite3": "^5.1.6",
        "xlsx": "^0.18.5"
    },
    "scripts": {
        "react-start": "set NODE_OPTIONS=--openssl-legacy-provider && react-scripts start",
        "react-build": "set NODE_OPTIONS=--openssl-legacy-provider && react-scripts build",
        "electron-start": "set APP_DEV=true && electron public/electron.js",
        "electron-build": "electron-builder"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@babel/core": "^7.21.8",
        "@babel/preset-react": "^7.18.6",
        "@electron-forge/maker-deb": "^6.1.1",
        "@electron-forge/maker-rpm": "^6.1.1",
        "@electron-forge/maker-squirrel": "^6.1.1",
        "@electron-forge/maker-zip": "^6.1.1",
        "babel-loader": "^9.1.2",
        "electron": "^24.8.8",
        "electron-builder": "^23.6.0"
    },
    "build": {
        "productName": "清单管理",
        "appId": "com.wanruuu.invoice",
        "files": [
            "build/**/*",
            "node_modules/**/*"
        ],
        "directories": {
            "output": "dist"
        },
        "win": {
            "icon": "build/coin.ico",
            "target": [
                {
                    "target": "nsis"
                }
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "shortcutName": "清单管理",
            "include": "installer.nsh"
        }
    }
}
